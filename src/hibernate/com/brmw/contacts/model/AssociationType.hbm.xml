<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
       "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.brmw.contacts.model">
	<class name="AssociationType">
		<id name="ident" type="long" column="AssociationTypeID">
			<generator class="org.hibernate.id.enhanced.TableGenerator">
				<param name="table_name">sequence</param>
				<param name="value_column_name">nextIdent</param>
				<param name="segment_column_name">tableName</param>
				<param name="segment_value">associationType</param>
				<param name="increment_size">10</param>
				<param name="optimizer">pooled</param>
			</generator>
		</id>

		<version name="version" column="version" type="long" />

		<many-to-one name="created" column="createdID" class="Audit" />
		<!--Should created have: cascade="create" update="false"? -->

		<many-to-one name="updated" column="updatedID" class="Audit" />

		<!-- Should natural-id have: mutable="true" ? -->
		<!-- <natural-id> -->
		<property name="name" type="string" unique="true" not-null="true"
			length="50" />
		<!-- </natural-id> -->

		<property name="description" type="string" length="100" />
	</class>
</hibernate-mapping>
