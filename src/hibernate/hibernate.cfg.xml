<!DOCTYPE hibernate-configuration PUBLIC 
"-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

		<!-- Database connection settings -->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.driver">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://copeland:3306/contacts</property>
		<property name="connection.username">contactsAdmin</property>
		<property name="connection.password">p4ssw0rd</property>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">1</property>

		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
<!--        <property name="dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>-->

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>

		<!-- Disable the second-level cache  -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">true</property>

		<!-- Drop and re-create the database schema on startup -->
<!--		<property name="hbm2ddl.auto">create</property>-->

        <!-- Mapping files -->
        <mapping resource="com/brmw/contacts/model/Association.hbm.xml" />
		<mapping resource="com/brmw/contacts/model/AssociationType.hbm.xml" />
        <mapping resource="com/brmw/contacts/model/Audit.hbm.xml" />
        <mapping resource="com/brmw/contacts/model/Communication.hbm.xml" />
        <mapping resource="com/brmw/contacts/model/Company.hbm.xml" />
        <mapping resource="com/brmw/contacts/model/Locator.hbm.xml" />
        <mapping resource="com/brmw/contacts/model/Medium.hbm.xml" />
        <mapping resource="com/brmw/contacts/model/Person.hbm.xml" />
        <mapping resource="com/brmw/contacts/model/Position.hbm.xml" />

	</session-factory>
</hibernate-configuration>
